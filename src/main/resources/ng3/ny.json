{
  "directories": [
    {
      "directory": "/home/jsundin/tmp/backuplab",
      "store-as": "jsundin-tmp"
    }
  ],
  "global-rules": [
    {
      "rule": "exclude-hidden-files"
    },
    {
      "rule": "exclude-symlinks"
    },
    {
      "rule": "exclude-directory",
      "directory": "/home/jsundin/tmp/squash"
    },
    {
      "rule": "exclude-directory",
      "directory": "/home/jsundin/tmp/AndroidStudioProjects"
    },
    {
      "rule": "exclude-directory",
      "directory": "/home/jsundin/tmp/nuc"
    },
    {
      "rule": "exclude-directory",
      "directory": "/home/jsundin/tmp/old-stuff"
    }
  ],
  "interval": "1m",
  "house-keeping": {
    "interval": "1w", # om inte anges - k√∂rs alltid efter ett jobb
    "deleted-files": { # keep-forever=true || keep-forever=false + resten, delete-after + keep-versions kan kombineras
      "keep-forever": true,
      "delete-after": "1m",
      "keep-versions": 3
    },
    "old-versions": {
      "keep-forever": true,
      "delete-after": "1m",
      "keep-versions": 3
    }
  },
  "target": {
    "driver": "archive",
    "archive-prefix": "/tmp/backup-",
    "max-files": 2000,
    "max-size": "2g"
  },
  "secrets": {
    "archive-key": "password"
  },
  "database": {
    "url": "jdbc:derby:ng3;create=true"
  }
}