{
  "directories": [
    {
      "directory": "/home/jsundin/tmp/backuplab",
      "store-as": "jsundin-tmp"
    }
  ],
  "global-rules": [
    {
      "rule": "exclude-hidden-files"
    },
    {
      "rule": "exclude-symlinks"
    },
    {
      "rule": "exclude-directory",
      "directory": "/home/jsundin/tmp/squash"
    },
    {
      "rule": "exclude-directory",
      "directory": "/home/jsundin/tmp/AndroidStudioProjects"
    },
    {
      "rule": "exclude-directory",
      "directory": "/home/jsundin/tmp/nuc"
    },
    {
      "rule": "exclude-directory",
      "directory": "/home/jsundin/tmp/old-stuff"
    }
  ],
  "interval": "1m",
  "versioning": {
    "interval": "1m",
    "deleted-files": {
      "strategy": "delete-after",
      "delete-after": "1w",
      "todo": "tolkning: omm senaste versionen av filen är borttagen - ta bort"
    },
    "old-versions": {
      "strategy": "keep-versions",
      "keep-versions": 7,
      "todo": "se till att inte delete-after nödvändigtvis tar bort sista versionen"
    }
  },
  "target": {
    "driver": "archive",
    "archive-prefix": "/tmp/backup-",
    "max-files": 2000,
    "max-size": "2g"
  },
  "secrets": {
    "archive-key": "password"
  },
  "database": {
    "url": "jdbc:derby:ng3;create=true"
  }
}